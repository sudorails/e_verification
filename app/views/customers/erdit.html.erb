<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit #{model_class.model_name.human}") %></h1>
</div>
<%= form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :application_ref_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :application_ref_no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :agency_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :agency_name, :class => 'text_field', :value=>"Scorp Enterprises" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fh_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fh_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :applicant_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :applicant_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :address, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :landmark, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :landmark, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :d_o_b, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :d_o_b, :class => 'date_select' %>
    </div>
  </div>



  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :pin, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :pin, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :country_state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country_state, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :country_city, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country_city, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :country_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :country_name, :class => 'text_field' %>
    </div>
  </div>



  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customers_path, :class => 'btn' %>
  </div>
<% end %>
